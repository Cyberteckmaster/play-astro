---
import { Image } from 'astro:assets';
const { title = "Cyberteckmaster - Cybersecurity Solutions" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content="Cyberteckmaster offers top-tier cybersecurity training, consulting, and zero-trust solutions." />
    <meta name="keywords" content="cybersecurity, training, consulting, zero trust, Cyberteckmaster" />
    <meta name="author" content="Cyberteckmaster" />
    <!-- Open Graph / Social Sharing -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content="Secure your business with Cyberteckmaster's expert cybersecurity solutions." />
    <meta property="og:image" content="/images/cyberteckmaster-og-image.webp" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:type" content="website" />
    <!-- Preload Font -->
    <link rel="preload" href="/fonts/inter-var.woff2" as="font" type="font/woff2" crossorigin />
    <!-- Favicon -->
    <link rel="icon" href="/images/logo.webp" type="image/webp" />
    <!-- Manifest for PWA -->
    <link rel="manifest" href="/manifest.json" />
    <style>
      body {
        font-family: 'Inter', sans-serif;
        margin: 0;
        padding: 0;
        line-height: 1.6;
      }
      main {
        min-height: 100vh;
      }
    </style>
  </head>
  <body>
    <header>
      <nav>
        <a href="/">
          <Image src="/images/logo.webp" alt="Cyberteckmaster logo" width={50} height={50} />
        </a>
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="/about">About</a></li>
          <li><a href="/contact">Contact</a></li>
        </ul>
      </nav>
    </header>
    <main>
      <slot />
    </main>
    <footer>
      <p>&copy; {new Date().getFullYear()} Cyberteckmaster. All rights reserved.</p>
    </footer>
  </body>
</html>

<style>
  header {
    padding: 1rem 2rem;
    border-bottom: 1px solid #ddd;
  }
  nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 1200px;
    margin: 0 auto;
  }
  ul {
    display: flex;
    list-style: none;
    gap: 2rem;
  }
  a {
    text-decoration: none;
    color: #333;
  }
  footer {
    text-align: center;
    padding: 2rem;
    background: #f8f8f8;
  }
</style>