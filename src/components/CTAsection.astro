// src/components/CTA.astro
---

<section id="cta" class="cta-section">
  <h2>Get Started Today</h2>
  <p class="section-description">Join our cybersecurity training programs or contact us for consulting services.</p>
  <a href="/contact" class="cta-button">Contact Us Now</a>
</section>

<style>
  .cta-section {
    padding: 4rem 2rem;
    text-align: center;
    background-color: var(--accent, #00aaff);
    color: var(--text-primary, #ffffff);
  }

  h2 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .section-description {
    font-size: 1.2rem;
    max-width: 800px;
    margin: 0 auto 2rem;
    color: var(--text-primary, #ffffff);
  }

  .cta-button {
    display: inline-block;
    padding: 1rem 2rem;
    background-color: var(--card-bg, #ffffff);
    color: var(--accent, #00aaff);
    text-decoration: none;
    border-radius: 5px;
    font-weight: bold;
    transition: background-color 0.3s ease;
  }

  .cta-button:hover {
    background-color: var(--text-secondary, #f0f0f0);
  }

  .cta-button:focus-visible {
    outline: 2px solid var(--text-primary, #ffffff);
    outline-offset: 2px;
  }

  @media (prefers-color-scheme: dark) {
    :root {
      --accent: #00aaff;
      --text-primary: #ffffff;
      --text-secondary: #e0e0e0;
      --card-bg: #f0f0f0;
    }
  }

  @media (max-width: 600px) {
    h2 {
      font-size: 2rem;
    }

    .section-description {
      font-size: 1rem;
    }

    .cta-button {
      padding: 0.75rem 1.5rem;
    }
  }
</style>