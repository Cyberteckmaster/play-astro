---
import { Image } from 'astro:assets';
---

<section class="hero">
  <div class="hero-content">
    <h1>Welcome to Cyberteckmaster</h1>
    <p>Your trusted partner in cybersecurity solutions</p>
    <a href="#cta" class="btn btn-primary">Get Started</a>
  </div>
  <Image
    src="/images/cyberteckmaster-hero.webp"
    alt="Cyberteckmaster hero image showcasing cybersecurity"
    width={1200}
    height={600}
    loading="eager"
  />
</section>

<style>
  .hero {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding: 4rem 2rem;
    background: url('/images/hero-background.webp') no-repeat center/cover;
  }
  .hero-content {
    max-width: 800px;
    margin-bottom: 2rem;
  }
  h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
  }
  p {
    font-size: 1.2rem;
    margin-bottom: 2rem;
  }
  .btn {
    padding: 0.8rem 1.6rem;
    border-radius: 0.5rem;
    text-decoration: none;
    font-weight: bold;
  }
  .btn-primary {
    background-color: #007bff;
    color: white;
  }
</style>