---
import { Image } from 'astro:assets';
---

<section class="services">
  <h2>Our Services</h2>
  <div class="services-grid">
    <div class="service-card">
      <Image
        src="/images/cybersecurity-training.webp"
        alt="Cybersecurity training service"
        width={300}
        height={200}
      />
      <h3>Cybersecurity Training</h3>
      <p>Empower your team with cutting-edge security skills.</p>
    </div>
    <div class="service-card">
      <Image
        src="/images/cybersecurity-consulting.webp"
        alt="Cybersecurity consulting service"
        width={300}
        height={200}
      />
      <h3>Consulting</h3>
      <p>Expert guidance to secure your business.</p>
    </div>
    <div class="service-card">
      <Image
        src="/images/zero-trust-security.webp"
        alt="Zero trust security service"
        width={300}
        height={200}
      />
      <h3>Zero Trust Security</h3>
      <p>Implement robust zero-trust architectures.</p>
    </div>
  </div>
</section>

<style>
  .services {
    padding: 4rem 2rem;
    text-align: center;
  }
  h2 {
    font-size: 2.5rem;
    margin-bottom: 2rem;
  }
  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }
  .service-card {
    padding: 1rem;
    border: 1px solid #ddd;
    border-radius: 0.5rem;
  }
  h3 {
    font-size: 1.5rem;
    margin: 1rem 0;
  }
</style>