--- 
const faqs = [
  {
    question: "What is cybersecurity training?",
    answer: "Our training equips your team with skills to prevent and respond to cyber threats.",
  },
  {
    question: "How does zero trust work?",
    answer: "Zero trust ensures no one is trusted by default, verifying every access request.",
  },
];
---

<section class="faq">
  <h2>Frequently Asked Questions</h2>
  <div class="faq-list">
    {faqs.map((faq) => (
      <details>
        <summary>{faq.question}</summary>
        <p>{faq.answer}</p>
      </details>
    ))}
  </div>
</section

<style>
  .faq {
    padding: 4rem 2rem;
    text-align: center;
  }
  h2 {
    font-size: 2.5rem;
    margin-bottom: 2rem;
  }
  .faq-list {
    max-width: 800px;
    margin: 0 auto;
    text-align: left;
  }
  details {
    margin-bottom: 1rem;
    padding: 1rem;
    border: 1px solid #ddd;
    border-radius: 0.5rem;
  }
  summary {
    font-weight: bold;
    cursor: pointer;
  }
  p {
    margin-top: 0.5rem;
  }
</style>